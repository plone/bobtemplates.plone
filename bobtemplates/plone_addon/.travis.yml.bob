language: python
python:
  - {{{ python.version }}}
install:
  - mkdir -p buildout-cache/{eggs,downloads}
  - python bootstrap.py -c travis.cfg
  - bin/buildout -Nc travis.cfg
script:
  - bin/test
  - bin/createcoverage
after_success:
  - pip install coveralls
  - coveralls

notifications:
  {{{ travis.notifications.type }}}:
    - {{{ travis.notifications.destination }}}
