        "Framework :: Plone :: 5.0",
        "Framework :: Plone :: 5.1",
{{% endif %}}
        "Programming Language :: Python",
        "Programming Language :: Python :: 2.7",
        "Operating System :: OS Independent",
        "License :: OSI Approved :: GNU General Public License v2 (GPLv2)",
    ],
    keywords='Python Plone',
